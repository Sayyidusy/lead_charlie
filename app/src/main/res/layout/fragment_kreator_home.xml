<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_color_2"
    tools:context=".ui.kreator.kreator_home.KreatorHomeFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_kreator_image"
        android:layout_width="@dimen/width_48dp"
        android:layout_height="@dimen/height_48dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:background="@drawable/container_circle_white"
        android:clipToOutline="true"
        android:src="@drawable/kreator_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_label_halo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:text="@string/label_halo"
        android:textAppearance="@style/TextAppearance.DinotisOriginal.Body.VerySmall.Reguler"
        android:textColor="@color/text_black"
        app:layout_constraintStart_toEndOf="@id/iv_kreator_image"
        app:layout_constraintTop_toTopOf="@id/iv_kreator_image" />

    <TextView
        android:id="@+id/tv_kreator_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_14dp"
        android:text="@string/kreator_full_name"
        android:textAppearance="@style/TextAppearance.DinotisOriginal.Body.Small.Bold"
        android:textColor="@color/text_black"
        app:layout_constraintStart_toStartOf="@id/tv_label_halo"
        app:layout_constraintTop_toBottomOf="@id/tv_label_halo" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:background="@drawable/container_circle_white"
        android:padding="@dimen/margin_8dp"
        android:src="@drawable/ic_notifications"
        app:layout_constraintBottom_toBottomOf="@id/iv_kreator_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_kreator_image" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_saldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_26dp"
        android:background="@drawable/container_white"
        android:paddingVertical="@dimen/margin_20dp"
        app:layout_constraintStart_toStartOf="@id/iv_kreator_image"
        app:layout_constraintTop_toBottomOf="@id/iv_kreator_image">

        <TextView
            android:id="@+id/tv_label_saldo_dompet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:text="@string/label_saldo_dompet"
            android:textAppearance="@style/TextAppearance.DinotisOriginal.Body.VerySmall.Reguler"
            android:textColor="@color/text_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_label_rp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:text="@string/label_rp4000000"
            android:textAppearance="@style/TextAppearance.DinotisOriginal.Body.Large.Bold"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_18sp"
            app:layout_constraintStart_toStartOf="@+id/tv_label_saldo_dompet"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_saldo_dompet" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_42dp"
            android:background="@drawable/container_purple"
            android:padding="@dimen/margin_8dp"
            android:src="@drawable/ic_wallet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_label_tarik_saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="@string/label_tarik_saldo"
            android:textAppearance="@style/TextAppearance.DinotisOriginal.Body.Small.Bold"
            android:textSize="@dimen/text_10sp"
            app:layout_constraintEnd_toEndOf="@id/iv_wallet"
            app:layout_constraintStart_toStartOf="@id/iv_wallet"
            app:layout_constraintTop_toBottomOf="@id/iv_wallet" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:background="@drawable/container_white"
        android:paddingVertical="@dimen/margin_16dp"
        app:layout_constraintStart_toStartOf="@id/cl_saldo"
        app:layout_constraintTop_toBottomOf="@id/cl_saldo">

        <ImageView
            android:id="@+id/iv_kreator_video"
            android:layout_width="@dimen/width_34dp"
            android:layout_height="@dimen/height_34dp"
            android:layout_marginStart="@dimen/margin_52dp"
            android:background="@drawable/container_purple"
            android:paddingHorizontal="@dimen/margin_8dp"
            android:paddingVertical="@dimen/margin_12dp"
            android:src="@drawable/ic_red_camera_video_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_label_buat_jadwal_sesi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:text="@string/label_buat_jadwal_sesi"
            android:textAppearance="@style/TextAppearance.DinotisOriginal.Body.VerySmall.Reguler"
            android:textSize="@dimen/text_10sp"
            app:layout_constraintEnd_toEndOf="@id/iv_kreator_video"
            app:layout_constraintStart_toStartOf="@id/iv_kreator_video"
            app:layout_constraintTop_toBottomOf="@id/iv_kreator_video" />

        <ImageView
            android:id="@+id/iv_pricetag"
            android:layout_width="@dimen/width_34dp"
            android:layout_height="@dimen/height_34dp"
            android:background="@drawable/container_purple"
            android:padding="@dimen/margin_8dp"
            android:src="@drawable/ic_price_tag_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_label_menu_bundling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:text="@string/label_menu_bundling"
            android:textAppearance="@style/TextAppearance.DinotisOriginal.Body.VerySmall.Reguler"
            android:textSize="@dimen/text_10sp"
            app:layout_constraintEnd_toEndOf="@id/iv_pricetag"
            app:layout_constraintStart_toStartOf="@id/iv_pricetag"
            app:layout_constraintTop_toBottomOf="@id/iv_pricetag" />

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="@dimen/width_34dp"
            android:layout_height="@dimen/height_34dp"
            android:layout_marginEnd="@dimen/margin_52dp"
            android:background="@drawable/container_purple"
            android:padding="@dimen/margin_8dp"
            android:src="@drawable/ic_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_label_menu_rate_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:text="@string/label_menu_rate_card"
            android:textAppearance="@style/TextAppearance.DinotisOriginal.Body.VerySmall.Reguler"
            android:textSize="@dimen/text_10sp"
            app:layout_constraintEnd_toEndOf="@id/iv_menu"
            app:layout_constraintStart_toStartOf="@id/iv_menu"
            app:layout_constraintTop_toBottomOf="@id/iv_menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_jadwal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_shape"
        android:layout_marginTop="@dimen/margin_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_menu">

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_sesi_terjadwal" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_permintaan_jadwal"/>

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_jadwal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tl_jadwal"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>