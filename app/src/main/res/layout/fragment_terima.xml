<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_shape"
    tools:context=".ui.kreator.kreator_home.permintaan_jadwal.terima.TerimaFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_label_konfirmasi_penerimaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:background="@color/white"
        android:gravity="start|center_vertical"
        android:text="@string/label_konfirmasi_penerimaan"
        android:textAppearance="@style/TextAppearance.DinotisOriginal.Body.Small.Bold"
        android:textColor="@color/text_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_description_konfirmasi_penerimaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_24dp"
        android:layout_marginVertical="@dimen/margin_18dp"
        android:text="@string/desc_terima"
        android:justificationMode="inter_word"
        android:textAppearance="@style/TextAppearance.DinotisOriginal.Body.VerySmall.Reguler"
        android:textColor="@color/text_black"
        app:layout_constraintBottom_toTopOf="@id/btn_kirim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_konfirmasi_penerimaan" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_kirim"
        style="@style/TextAppearance.Dinotis.Body.Large.SemiBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_24dp"
        android:layout_marginBottom="@dimen/margin_24dp"
        android:background="@drawable/button_light_purple"
        android:text="@string/label_kirim"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>